# ========================
# PostgresSQL Configuration
# ========================
POSTGRES_USER=your_postgres_user
POSTGRES_PASSWORD=your_postgres_password
POSTGRES_DB=your_database_name
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# Async SQLAlchemy URL for FastAPI
DATABASE_URL=postgresql+asyncpg://your_postgres_user:your_postgres_password@postgres:5432/your_database_name

# Sync SQLAlchemy URL for Celery tasks
DATABASE_SYNC_URL=postgresql+psycopg2://your_postgres_user:your_postgres_password@postgres:5432/your_database_name

# ================
# Redis Configuration
# ================
REDIS_URL=redis://redis:6379/0
REDIS_HOST=redis
REDIS_PORT=6379

# =================
# JWT Configuration
# =================
SECRET_KEY=your_super_secret_key
ALGORITHM=
ACCESS_TOKEN_EXPIRE_MINUTES=2
REFRESH_TOKEN_EXPIRE_MINUTES=15

# ==================
# OpenAI API Settings
# ==================
OPENAI_API_KEY=your_openai_api_key
OPENAI_MODEL=
